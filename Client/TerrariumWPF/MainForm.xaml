<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:ControlsWPF.Controls;assembly=ControlsWPF"
        x:Class="TerrariumWPF.MainForm"
        Title="Terrarium" Height="768" Width="1024" 
        WindowStartupLocation="CenterScreen" Background="Magenta"
        Foreground="White" MinHeight="200" MinWidth="320" Loaded="Window_Loaded">
    <DockPanel>
        <Controls:GlassTitleBar x:Name="titleBar" DockPanel.Dock="Top" />
        <Controls:DeveloperPanel x:Name="developerPanel" DockPanel.Dock="Left" />
        <Controls:GlassBottomPanel x:Name="bottomPanel" DockPanel.Dock="Bottom"/>
        <Grid x:Name="tddGameView">
            <TextBlock>TerrariumDirectDrawGameView</TextBlock>
        </Grid>
    </DockPanel>
</Window>
